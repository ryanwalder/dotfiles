# vi: set ft=sh :

export PAGER="less"
export EDITOR="/usr/bin/vim"
if [[ $(hostname) == "tfu" ]]; then
    export GDK_SCALE=2
    export GDK_DPI_SCALE=05
fi

if [[ -f ~/.bash_bp ]]; then
  source .bash_bp
fi

if [[ -f /lib/terminfo//x/xterm-256color ]]; then
    export TERM='xterm-256color'
else
    export TERM='xterm-color'
fi
