#!/usr/bin/env bash

hostname=$(hostname -s)

is_connected() {
    if xrandr | grep "$1" | grep -q " connected"; then
        return 0
    else
        return 1
    fi
}

laptop="eDP-1"
left="DP-1-1"
right="DP-1-3"

# If externals plugged in
if is_connected ${left} && is_connected ${right}; then
    autorandr --load work
else
    autorandr --load laptop
fi
