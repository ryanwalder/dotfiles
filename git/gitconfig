[user]
    name = Ryan Walder
    email = ryan@tfu.io
	signingkey = 0xD953AE58DEB9603B
[alias]
    # Work on origin
    ro = !git rebase origin/$(git symbolic-ref HEAD | sed 's!refs\\/heads\\/!!')
    rio = !git rebase -i origin/$(git symbolic-ref HEAD | sed 's!refs\\/heads\\/!!')
    som = !git log origin/$(git symbolic-ref HEAD | sed 's!refs\\/heads\\/!!')..HEAD  --pretty=format:'* %s' --reverse
    # Work on upgtream (github etc...)
    fu = fetch upstream
    rum = rebase upstream/master
    rim = rebase -i upstream/master
    sum = log upstream/master..HEAD  --pretty=format:'* %s' --reverse
    # Lazy
    sss = !sh -c 'git commit -m \"sss $@\"' -
    f = fetch --all
    co = checkout
    br = branch
    st = status
    cp = cherry-pick
    unadd = reset HEAD
    uncommit = reset HEAD~
    pullff = pull --ff-only
    logs = log --show-signature
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    yolo = !git add . && git commit -m \"$(curl -s http://whatthecommit.com/index.txt)\" && git push origin master -f
[core]
    editor = vim
[merge]
    ff = only
[push]
    default = simple
    followTags = true
[rebase]
    autostash = true
[status]
    showUntrackedFiles = all
[transfer]
    fsckobjects = true
[credential]
	helper = cache --timeout=28800
[fetch]
	prune = true
[commit]
	gpgsign = true
[gpg]
	program = gpg
