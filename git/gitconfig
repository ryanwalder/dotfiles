	signingkey = 0xD953AE58DEB9603B
[alias]
    # Rebase, if we have an upstream, use that, else use origin
    # Rebase upstream/master OR origin/master
    rum = "!sh -c '\
        if git remote -v | grep -q upstream; then \
            git rebase upstream/master; \
        else \
            git rebase origin/master;\
        fi'"
    # Rebase interactive upstream/master OR origin/master
    rim = "!sh -c '\
        if git remote -v | grep -q upstream; then \
            git rebase -i upstream/master; \
        else \
            git rebase -i origin/master; \
        fi'"
    # Show differing commits from uostream/master OR origin/master
    # as `* commit message`
    sum = "!sh -c '\
        if git remote -v | grep -q upstream; then \
            git log upstream/master..HEAD \
            --pretty=format:\"* %s\" --reverse;\
        else \
        git log origin/master..HEAD \
            --pretty=format:\"* %s\" --reverse;\
        fi'"
    # Lazy
    sss = !sh -c 'git commit -m \"sss $@\"' -
    f = fetch --all
    co = checkout
    br = branch
    st = status
    cp = cherry-pick
    unadd = reset HEAD
    uncommit = reset HEAD~
    pullff = pull --ff-only
    logs = log --show-signature
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    yolo = !git add . && git commit -m \"$(curl -s http://whatthecommit.com/index.txt)\" && git push origin master -f
[core]
    editor = /usr/bin/vi
[merge]
    ff = only
[push]
    default = simple
    followTags = true
[rebase]
    autostash = true
[status]
    showUntrackedFiles = all
[transfer]
    fsckobjects = true
[credential]
	helper = cache --timeout=28800
[fetch]
	prune = true
[commit]
	gpgsign = true
[gpg]
	program = gpg
